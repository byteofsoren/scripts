# Define ANSI color codes with C_ prefix
C_RED="\033[31m"
C_GREEN="\033[32m"
C_YELLOW="\033[33m"
C_BLUE="\033[34m"
C_MAGENTA="\033[35m"
C_CYAN="\033[36m"
C_LIGHT_GRAY="\033[37m"
C_DARK_GRAY="\033[90m"
C_LIGHT_RED="\033[91m"
C_LIGHT_GREEN="\033[92m"
C_LIGHT_YELLOW="\033[93m"
C_LIGHT_BLUE="\033[94m"
C_LIGHT_MAGENTA="\033[95m"
C_LIGHT_CYAN="\033[96m"
C_WHITE="\033[97m"
C_NO_COLOR="\033[0m"

# Define some comonly used flags.
F_OK="${C_GREEN}[OK]${C_NO_COLOR}"
F_FAIL="${C_RED}[FAIL]${C_NO_COLOR}"
F_START="${C_GREEN}[START]${C_NO_COLOR}"
F_RUN="${C_GREEN}[RUN]${C_NO_COLOR}"
F_STOP="${C_YELLOW}[STOP]${C_NO_COLOR}"
